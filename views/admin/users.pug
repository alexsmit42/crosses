extends ./layout.pug

block content
    h4 Users page

    table(class="table")
        thead
            tr
                th(scope="col") Username
                th(scope="col") Email
                th(scope="col") Admin
        tbody
            for user in users
                tr(user-id=user.id)
                    td= user.username
                    td= user.email
                    td
                        .form-check
                            label.form-check-label
                                input(type="checkbox", class="form-check-input change-role-admin", checked=(user.role === 'admin'))